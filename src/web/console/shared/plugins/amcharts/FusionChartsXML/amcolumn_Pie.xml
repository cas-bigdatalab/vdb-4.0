<settings>
	<text_color>FFFFFF</text_color>
	<redraw>1</redraw>
	<precision>1</precision>
	<background>
		<alpha>100</alpha>
		<border_alpha>25</border_alpha>
		<file>../examples/custom_background/bg.swf</file>
	</background>
	<balloon>
		<show>{title}: {value} mln. ({percents}%)</show>
	</balloon>
	<legend>
		<x>500</x>
		<y>0</y>
		<width>170</width>
		<max_columns>1</max_columns>
		<color>000000</color>
		<alpha>1</alpha>
		<text_color>000000</text_color>
		<text_size>12</text_size>
		<spacing>0</spacing>
		<margins>7</margins>
		<key>
			<size>15</size>
		</key>
		<values>
			<enabled>1</enabled>
			<width>35</width>
		</values>
	</legend>
	<pie>
		<x>250</x>
		<y>130</y>
		<radius>80</radius>
		<inner_radius>20</inner_radius>
		<height>10</height>
		<angle>20</angle>
		<outline_color>000000</outline_color>
		<base_color>B0DE09</base_color>
		<brightness_step>-10</brightness_step>
	</pie>
	<animation>
		<start_time>1</start_time>
		<pull_out_time>1</pull_out_time>
	</animation>
	<data_labels>
		<show>{title}</show>
		<radius>30</radius>
		<text_color>000000</text_color>
		<text_size>12</text_size>
		<max_width>90</max_width>
		<line_alpha>50</line_alpha>
	</data_labels>
	<labels>
		<label lid="0">
			<text><![CDATA[<b></b>]]></text>
			<y>40</y>
			<text_size>12</text_size>
			<align>center</align>
		</label>
	</labels>
</settings>